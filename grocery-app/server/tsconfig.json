{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "rootDir": "../", // changed from "src" to include both src and config in dist
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "../",
    "paths": {
      "@config/*": ["config/*"]
    }
  },
  "include": ["src/**/*", "../config/**/*"]
}
